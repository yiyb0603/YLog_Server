{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es6",
		"baseUrl": "./src",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"resolveJsonModule": true
	}
}
